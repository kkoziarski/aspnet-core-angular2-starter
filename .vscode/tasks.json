{
    "version": "0.1.0",
    "command": "cmd",
    "isShellCommand": true,
    "args": ["/C"],
    "showOutput": "always",
    "suppressTaskName": true,
    "options": {
        "cwd": "${workspaceRoot}\\src\\aspnet-core-angular2-starter"
    },
    "tasks": [
		{
			"taskName": "ts (gulp)",
			"isBuildCommand": true,
            "args": ["gulp ts"],            
			"showOutput": "always",
			"problemMatcher": "$tsc"
		},
        {
			"taskName": "less (gulp)",
			"isBuildCommand": true,
            "args": ["gulp less"],            
			"showOutput": "always"
		},
        {
			"taskName": "build (gulp)",
			"isBuildCommand": true,
            "args": ["gulp build"],                        
			"showOutput": "always"
        },
        {
			"taskName": "rebuild (gulp)",
			"isBuildCommand": true,
            "args": ["gulp rebuild"],                        
			"showOutput": "always"
		},
		{
			"taskName": "watch",
			"isBuildCommand": true,
            "args": ["gulp watch"],                        
			"showOutput": "always"
		},
		{
			"taskName": "clean (gulp)",
			"isBuildCommand": true,
            "args": ["gulp clean"],                        
			"showOutput": "always"
		},
		{
			"taskName": "clean-all (gulp)",
			"isBuildCommand": true,
            "args": ["gulp clean-all"],                        
			"showOutput": "always"
		},
        {
            "taskName": "build dotnet",
            "isBuildCommand": true,
            "args": ["dotnet build", ".\\project.json"],
            "problemMatcher": "$msCompile"
        },
        {
            "taskName": "start dotnet",
            "isBuildCommand": true,
            "args": ["dotnet run"],
            "problemMatcher": "$msCompile"
        },
        {
            "taskName": "start dotnet watcher",
            "isBuildCommand": true,
            "args": ["dotnet watch run"],
            "problemMatcher": "$msCompile"
        },
        {
            "taskName": "restore",
            "isBuildCommand": true,
            "args": ["dotnet restore", ".\\project.json"],
            "problemMatcher": "$msCompile"
        }
    ]
}