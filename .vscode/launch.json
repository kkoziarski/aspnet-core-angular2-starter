{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome against localhost, with sourcemaps",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5001",
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}/src/aspnet-core-angular2-starter/wwwroot"
        },
        {
            "name": "Attach to Chrome, with sourcemaps",
            "type": "chrome",
            "request": "attach",
            "port": 9222,  
            "url": "http://localhost:5001",
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}/src/aspnet-core-angular2-starter/wwwroot"
        },
        {
            "name": "Attach to Chrome, without sourcemaps",
            "type": "chrome",
            "request": "attach",
            "port": 9222,  
            "url": "http://localhost:5001",
            "sourceMaps": false,
            "webRoot": "${workspaceRoot}/src/aspnet-core-angular2-starter/wwwroot"
        }
    ]
}